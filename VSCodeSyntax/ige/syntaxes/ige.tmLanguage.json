{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ImageGameEngine",
	"patterns": [
		{
			"include": "#instructions"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#hexNumbers"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"instructions": {
			"patterns": [
				{
					"name": "entity.name.function.ige",
					"match": "\\b(?<=^\\s*|[^\\|])(OFF|GTO|VAL|VAR|WRT|CAR|CAV|FLL|IFE|IFL|BLT|BRN|RTN|ADD|MUL|DIV|SUB|MOD|AND|XOR|BOR|BSL|BSR)\\s(?=((\\$\\d+|[A-Fa-f0-9]{2})[^\\n](\\$\\d+|[A-Fa-f0-9]{2}))|L:)\\b"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.ige",
					"match": "\\b(TO|FILL|PASS|IMPORT|LABEL|ATLABEL|HLABEL|INIT_RANDOM|INIT_GRADIENT|REL|ENDREL|PATCH|MAPSTRING|UNMAP|L:)\\b"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.ige",
					"match": "(#.*)"
				}
			]
		},
		"hexNumbers": {
			"patterns": [
				{
					"name": "constant.numeric.hex.ige",
					"match": "\\b[A-Fa-f0-9]{2}\\b"
				},
				{
					"name": "constant.numeric.decimal.ige",
					"match": "\\$\\d+"
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "variable.language.ige",
					"match": "(\\sX|\\sY)(\\+|-)?"
				},
				{
					"name":"variable.language.ige",
					"match": "\\bFF AE\\b"
				},
				{
					"name":"variable.language.ige",
					"match": "\\bFF BB\\b"
				},
				{
					"name":"variable.language.ige",
					"match": "\\bFF 00 BB\\b"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name":"string.quoted.double",
					"match": "\"(.*?)\""
				}
			]
		}
	},
	"scopeName": "source.ige"
}